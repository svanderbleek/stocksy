<% @stocks.each do |stock| %>
  <tr>
    <td><%= stock.symbol %></td>
    <td><%= stock.shares || '-' %></td>
    <td><%= number_to_currency(stock.price) || '-' %></td>
    <td><%= number_to_currency(stock.value) || '-' %></td>
    <td><%= stock.trend(up: '^', down: 'v') || '-' %></td>
    <td><%= link_to 'x', stock, method: :delete, data: {confirm: 'Remove?'} %></td>
  </tr>
<% end %>
